{
  "name": "tutopanda-monorepo",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter tutopanda-client dev\" \"pnpm --filter tutopanda-server dev\"",
    "dev:client": "pnpm --filter tutopanda-client dev",
    "dev:server": "pnpm --filter tutopanda-server dev",
    "build": "pnpm --filter tutopanda-client build && pnpm --filter tutopanda-server build",
    "build:client": "pnpm --filter tutopanda-client build",
    "build:server": "pnpm --filter tutopanda-server build",
    "lint": "pnpm --filter tutopanda-client lint",
    "start": "pnpm --filter tutopanda-server start",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:all": "pnpm --filter tutopanda-client lint && pnpm --filter tutopanda-server lint && pnpm format:check",
    "check": "pnpm --filter tutopanda-client type-check && pnpm --filter tutopanda-server check"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "concurrently": "^9.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  }
}
