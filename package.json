{
  "name": "tutopanda-monorepo",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter client dev\" \"pnpm --filter server dev\"",
    "dev:client": "pnpm --filter client dev",
    "dev:server": "pnpm --filter server dev",
    "build": "pnpm --filter client build && pnpm --filter server build",
    "build:client": "pnpm --filter client build",
    "build:server": "pnpm --filter server build",
    "start": "pnpm --filter server start",
    "check": "pnpm --filter client type-check && pnpm --filter server check",
    "db:push": "pnpm --filter server db:push"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  }
}
