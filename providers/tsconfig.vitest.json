{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": [
      "vitest/globals"
    ],
    "rootDir": ".",
    "noEmit": true,
    "typeRoots": [
      "./node_modules/@types",
      "../node_modules/@types",
      "./node_modules",
      "../node_modules"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.test.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests/integration/**"
  ]
}
