{
  "name": "@tutopanda/cli",
  "version": "0.1.3",
  "description": "CLI tool for generating longer movies from a short image, video, audio segments generated by AI",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "tutopanda": "dist/cli.js"
  },
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src",
    "type-check": "tsc --noEmit",
    "test": "pnpm test:unit && pnpm test:integration && pnpm test:e2e",
    "test:unit": "vitest run --pool=threads --poolOptions.threads.singleThread",
    "test:integration": "vitest run -c vitest.integration.config.ts --pool=threads --poolOptions.threads.singleThread",
    "test:e2e": "vitest run -c vitest.e2e.config.ts --pool=threads --poolOptions.threads.singleThread",
    "test:typecheck": "pnpm test:typecheck:unit && pnpm test:typecheck:integration && pnpm test:typecheck:e2e",
    "test:typecheck:unit": "tsc --project tsconfig.vitest.unit.json --noEmit",
    "test:typecheck:integration": "tsc --project tsconfig.vitest.integration.json --noEmit",
    "test:typecheck:e2e": "tsc --project tsconfig.vitest.e2e.json --noEmit",
    "test:ui": "vitest --ui",
    "test:run": "vitest run"
  },
  "files": [
    "dist",
    "config"
  ],
  "packageManager": "pnpm@10.15.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "dotenv": "^17.2.3",
    "ink": "^4.1.0",
    "meow": "^11.0.0",
    "p-limit": "^7.2.0",
    "react": "^18.2.0",
    "smol-toml": "^1.4.2",
    "@tutopanda/core": "workspace:*",
    "@tutopanda/providers": "workspace:*",
    "yaml": "^2.8.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "@types/node": "^20.16.11",
    "@types/react": "^18.3.11",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "ink-testing-library": "^3.0.0",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  }
}
