{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"types": [
			"vitest/globals"
		],
		"noEmit": true,
		"typeRoots": [
			"./node_modules/@types",
			"../node_modules/@types",
			"./node_modules",
			"../node_modules"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"**/*.test.ts",
		"**/*.test.tsx"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
