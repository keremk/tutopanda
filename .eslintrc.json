{
  "root": true,
  "extends": [
    "eslint:recommended",
    "@typescript-eslint/recommended",
    "prettier"  // Disables ESLint rules conflicting with Prettier
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "rules": {
    // Optional: Your custom rules, e.g., "@typescript-eslint/no-unused-vars": "warn"
  },
  "ignorePatterns": ["dist/", "node_modules/", ".next/", ".nitro/"]
}