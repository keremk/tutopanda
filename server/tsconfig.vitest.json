{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": [
      "vitest/globals"
    ],
    "noEmit": true,
    "typeRoots": [
      "./node_modules/@types",
      "../node_modules/@types",
      "./node_modules",
      "../node_modules"
    ]
  },
  "include": [
    "server/**/*.ts",
    "**/*.test.ts"
  ],
  "exclude": [
    "node_modules",
    ".output"
  ]
}
