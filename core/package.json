{
  "name": "tutopanda-core",
  "version": "0.1.1",
  "description": "Core library for planning, managing and running the movie generation flows",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./blueprint-loader": {
      "types": "./dist/blueprint-loader/index.d.ts",
      "import": "./dist/blueprint-loader/index.js"
    }
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:typecheck": "tsc --project tsconfig.vitest.json --noEmit",
    "test:ui": "vitest --ui",
    "test:run": "vitest run"
  },
  "keywords": [
    "ai",
    "assets",
    "movie",
    "audio",
    "images"
  ],
  "author": "",
  "packageManager": "pnpm@10.15.0",
  "dependencies": {
    "@flystorage/file-storage": "^1.2.0",
    "@flystorage/in-memory": "^1.1.0",
    "@flystorage/local-fs": "^1.2.0",
    "smol-toml": "^1.4.2",
    "yaml": "^2.8.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "@types/node": "^20.16.11",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8",
    "eslint-config-prettier": "^10.1.8",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  }
}
